<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/circleImageView"
            android:src="@drawable/icon_about"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:civ_border_color="@android:color/holo_blue_light"
            app:civ_border_width="2dp"
            android:layout_marginLeft="11dp"
            android:layout_marginStart="11dp"
            android:layout_marginTop="11dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />


        <TextView
            android:textSize="17dp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:id="@+id/cont_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_marginLeft="14dp"
            android:layout_marginStart="14dp"
            android:layout_alignTop="@+id/circleImageView"
            android:layout_toRightOf="@+id/circleImageView"
            android:layout_toEndOf="@+id/circleImageView" />

        <TextView

            android:id="@+id/cont_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="54555586225"
            android:layout_centerVertical="true"
            android:layout_alignLeft="@+id/cont_name"
            android:layout_alignStart="@+id/cont_name" />



    </RelativeLayout>
