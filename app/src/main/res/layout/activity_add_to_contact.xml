<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lue.erachat.Activity.ViewContactActivity">
    <com.wang.avi.AVLoadingIndicatorView
        android:visibility="gone"
        app:indicatorColor="@color/colorPrimaryDark"
        android:id="@+id/avi"
        android:gravity="center"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerInParent="true"
        style="@style/AVLoadingIndicatorView.Large"
        app:indicatorName="BallClipRotateIndicator" />
    <RelativeLayout
        android:layout_margin="2dp"
        android:background="@drawable/buttonwhite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relativeLayout">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_marginBottom="20dp"

            android:id="@+id/imageView46"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="18dp"
            android:layout_marginStart="18dp"
            android:src="@drawable/icon_addmember"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="18dp" />

        <TextView
            android:textSize="17sp"
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp"
            android:text="Name"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/imageView46"
            android:layout_toEndOf="@+id/imageView46" />
    </RelativeLayout>

    <RelativeLayout
        android:background="@drawable/buttonwhite"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@+id/relativeLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/relativeLayout4">
        <TextView
            android:layout_marginLeft="20dp"
            android:padding="20dp"
            android:text="Mobile No"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView64" />
        <TextView
            android:id="@+id/mobile"
            android:padding="20dp"
            android:text="7739763684"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/textView64"
            android:layout_toEndOf="@+id/textView64"
            android:layout_marginLeft="23dp"
            android:layout_marginStart="23dp" />

    </RelativeLayout>

    <Button
        android:textColor="@android:color/white"
        android:background="@drawable/button_primary"
        android:textAllCaps="false"
        android:id="@+id/button13"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Add"
        android:layout_below="@+id/relativeLayout4"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
