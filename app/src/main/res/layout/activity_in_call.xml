<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#fc9b62"
    tools:context="com.example.lue.erachat.Activity.InCallActivity">

    <ImageView
        android:id="@+id/imageView32"
        android:layout_width="200dp"
        android:layout_height="180dp"
        android:src="@drawable/profile_big"
        android:layout_marginTop="29dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:textSize="20dp"
        android:textColor="@android:color/black"
        android:id="@+id/textView36"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:layout_below="@+id/imageView32"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView37"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="00.00"
        android:layout_below="@+id/textView36"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/imageView33"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/mute_icon"
        android:layout_alignTop="@+id/imageView34"
        android:layout_toLeftOf="@+id/imageView32"
        android:layout_toStartOf="@+id/imageView32" />

    <ImageView
        android:id="@+id/imageView34"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/pause_icon"
        android:layout_marginRight="18dp"
        android:layout_marginEnd="18dp"
        android:layout_below="@+id/textView37"
        android:layout_toLeftOf="@+id/imageView35"
        android:layout_toStartOf="@+id/imageView35" />

    <ImageView
        android:id="@+id/imageView35"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/video_icon"
        android:layout_marginRight="17dp"
        android:layout_marginEnd="17dp"
        android:layout_below="@+id/textView37"
        android:layout_toLeftOf="@+id/imageView36"
        android:layout_toStartOf="@+id/imageView36" />

    <ImageView
        android:id="@+id/imageView36"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/volume_icon"
        android:layout_alignTop="@+id/imageView35"
        android:layout_toRightOf="@+id/imageView32"
        android:layout_toEndOf="@+id/imageView32" />

    <TextView
        android:textColor="@android:color/white"
        android:id="@+id/textView38"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Mute"
        android:layout_below="@+id/imageView33"
        android:layout_alignLeft="@+id/imageView33"
        android:layout_alignStart="@+id/imageView33"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp" />

    <TextView
        android:textColor="@android:color/white"

        android:id="@+id/textView39"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pause"
        android:layout_alignBaseline="@+id/textView38"
        android:layout_alignBottom="@+id/textView38"
        android:layout_toLeftOf="@+id/textView36"
        android:layout_toStartOf="@+id/textView36" />

    <TextView
        android:textColor="@android:color/white"

        android:id="@+id/textView40"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Video Call"
        android:layout_alignBaseline="@+id/textView39"
        android:layout_alignBottom="@+id/textView39"
        android:layout_toRightOf="@+id/textView37"
        android:layout_toEndOf="@+id/textView37" />

    <TextView
        android:textColor="@android:color/white"

        android:id="@+id/textView41"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/imageView36"
        android:layout_alignRight="@+id/imageView36"
        android:layout_alignTop="@+id/textView40"
        android:text="Speaker On" />

    <ImageButton
        android:background="@drawable/button_primary"
        android:id="@+id/imageButton3"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:src="@drawable/phone_icon_white"
        android:layout_marginTop="36dp"
        android:layout_below="@+id/textView38"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
