<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:padding="10dp" android:shape="rectangle">
            <!-- you can use any color you want I used here gray color-->
            <solid android:color="@color/buttonfocus" />
            <corners android:bottomLeftRadius="20dp" android:bottomRightRadius="20dp" android:topLeftRadius="20dp" android:topRightRadius="20dp" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:padding="10dp" android:shape="rectangle">
            <!-- you can use any color you want I used here gray color-->
            <solid android:color="@color/buttonfocus" />
            <corners android:bottomLeftRadius="20dp" android:bottomRightRadius="20dp" android:topLeftRadius="20dp" android:topRightRadius="20dp" />
        </shape>
    </item>
    <item>
        <shape android:padding="10dp" android:shape="rectangle">
            <!-- you can use any color you want I used here gray color-->
            <solid android:color="@color/colorPrimary" />
            <corners android:bottomLeftRadius="20dp" android:bottomRightRadius="20dp" android:topLeftRadius="20dp" android:topRightRadius="20dp" />
        </shape>
    </item>
</selector>