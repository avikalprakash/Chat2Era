<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape
            android:shape="rectangle" android:padding="3dp">
            <!-- you can use any color you want I used here gray color-->
           <solid android:color="@color/cancelbtnfocus"/>
            <stroke android:width="1dp" android:color="@color/colorTransparent" />
            <padding android:left="2dp"
                android:top="3dp"
                android:right="3dp"
                android:bottom="3dp" />
            <corners android:radius="5dp" />
            <corners android:radius="2dp" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape
            android:shape="rectangle" android:padding="0dp">
            <!-- you can use any color you want I used here gray color-->
            <solid android:color="#352d2d"/>
            <corners
                 android:bottomRightRadius="20dp"
                 android:bottomLeftRadius="20dp"
                 android:topLeftRadius="20dp"
                 android:topRightRadius="20dp"/>
        </shape>
    </item>
    <item >
        <shape
            android:shape="rectangle" android:padding="10dp">
            <!-- you can use any color you want I used here gray color-->
            <solid android:color="#ffffff"/>
            <corners
                android:bottomRightRadius="20dp"
                android:bottomLeftRadius="20dp"
                android:topLeftRadius="20dp"
                android:topRightRadius="20dp"/>
        </shape>
    </item>
</selector>