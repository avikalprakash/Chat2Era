<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageView49"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="22dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/man"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:textSize="20dp"
        android:id="@+id/textView65"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp"
        android:text="Group Name"
        android:layout_alignTop="@+id/imageView49"
        android:layout_toRightOf="@+id/imageView49"
        android:layout_toEndOf="@+id/imageView49" />

    <TextView
        android:textColor="@android:color/white"
        android:padding="8dp"
        android:background="@drawable/text_background_primary"
        android:id="@+id/textView67"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:text="Message"
        android:layout_below="@+id/textView65"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/textView68"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="admin"
        android:layout_alignBottom="@+id/textView67"
        android:layout_alignLeft="@+id/textView65"
        android:layout_alignStart="@+id/textView65" />
    <com.wang.avi.AVLoadingIndicatorView
        app:indicatorColor="@color/colorPrimaryDark"
        android:id="@+id/avi"
        android:gravity="center"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerInParent="true"
        style="@style/AVLoadingIndicatorView.Large"
        app:indicatorName="BallClipRotateIndicator" />

    <LinearLayout
        android:background="@color/grey"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout2">
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/lblinvite"
                android:layout_width="wrap_content"
                android:layout_height="78dp"
                android:layout_marginTop="5dp"
                android:layout_weight="0.28"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="40dp"
                    android:src="@drawable/icon_addmember" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Invite Members"
                    android:textColor="@android:color/white"
                    android:textSize="15sp" />
            </LinearLayout>
            <View
                android:background="@android:color/white"
                android:layout_width="1dp"
                android:layout_height="match_parent"></View>
            <LinearLayout
                android:id="@+id/laveGroup"
                android:layout_marginTop="10dp"
                android:layout_weight="0.50"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <ImageView
                    android:src="@drawable/icon_leave"
                    android:layout_width="60dp"
                    android:layout_height="40dp" />
                <TextView
                    android:textSize="15sp"
                    android:textColor="@android:color/white"
                    android:text="Leave"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:textSize="18sp"
        android:textColor="@android:color/holo_blue_light"
        android:id="@+id/textView70"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="no of member"
        android:layout_marginTop="31dp"
        android:layout_marginLeft="48dp"
        android:layout_marginStart="48dp"
        android:layout_below="@+id/imageView49"
        android:layout_alignLeft="@+id/imageView49"
        android:layout_alignStart="@+id/imageView49" />
    <ListView
        android:id="@+id/memberList"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView70"
        android:layout_above="@+id/linearLayout2">

    </ListView>

    <ImageView
        android:id="@+id/imageView47"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:srcCompat="@drawable/edit"
        android:layout_alignTop="@+id/textView65"
        android:layout_alignLeft="@+id/textView67"
        android:layout_alignStart="@+id/textView67" />
</RelativeLayout>