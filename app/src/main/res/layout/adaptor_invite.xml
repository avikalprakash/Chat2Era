<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.wang.avi.AVLoadingIndicatorView
        android:visibility="gone"
        app:indicatorColor="@color/colorPrimaryDark"
        android:id="@+id/avi"
        android:gravity="center"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerInParent="true"
        style="@style/AVLoadingIndicatorView.Large"
        app:indicatorName="BallClipRotateIndicator" />
    <Button
        android:textColor="@android:color/white"
        android:textAllCaps="false"
        android:background="@drawable/button_primary"
        android:id="@+id/button15"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="Accept"
        android:layout_below="@+id/textView76"
        android:layout_toRightOf="@+id/avi"
        android:layout_toEndOf="@+id/avi"
        android:layout_marginLeft="17dp"
        android:layout_marginStart="17dp" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageView22"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginLeft="29dp"
        android:layout_marginStart="29dp"
        android:layout_marginTop="12dp"
        app:srcCompat="@drawable/icon_profile_new"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:textStyle="bold"
        android:id="@+id/textView72"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/textView73"
        android:layout_alignLeft="@+id/textView73"
        android:layout_alignStart="@+id/textView73"
        android:layout_above="@+id/textView76" />

    <Button
        android:textColor="@android:color/white"
        android:textAllCaps="false"
        android:background="@drawable/cancelpagebtn"
        android:id="@+id/button16"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Reject"
        android:layout_alignBaseline="@+id/button15"
        android:layout_alignBottom="@+id/button15"
        android:layout_toRightOf="@+id/textView75"
        android:layout_toEndOf="@+id/textView75" />

    <TextView
        android:id="@+id/textView73"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageView22"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp"
        android:layout_toRightOf="@+id/imageView22"
        android:text="TextView"
        android:textSize="18dp"
        android:textStyle="bold" />

    <TextView
        android:textStyle="bold"
        android:textColor="@android:color/holo_green_light"
        android:id="@+id/textView75"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Status"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/imageView22"
        android:layout_centerHorizontal="true" />

    <TextView
        android:textColor="@android:color/holo_green_light"
        android:textSize="15dp"
        android:textStyle="bold"
        android:id="@+id/textView76"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_alignTop="@+id/textView75"
        android:layout_toRightOf="@+id/textView75"
        android:layout_toEndOf="@+id/textView75"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp" />

</RelativeLayout>